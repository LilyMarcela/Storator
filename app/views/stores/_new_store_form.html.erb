<%= form_for @store, :html => {:class => "form-horizontal center"} do 
    |f| %>
    <div class="form-group">
      <%= f.label :store_name, "Name of your store:", class: "col-md-4 control label" %>
      <div class="col-md-4">
        <%= f.text_field :store_name, class: "form-control",
        placeholder: "Store name" %>
      </div>
      <div class="form-group">
        <%= f.label :slogan, "Add your Slogan", class: "col-md-4 control-label" %>
      </div>
      <div class="col-4">
        <%= f.text_field :slogan, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description, "Describe your store", class: "col-md-4 control-label" %>
      </div>
      <div class="col-4">
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :photo, "Add your photo", class: "col-md-4 control-label" %>
      </div>
      <div class="col-4">
        <%= f.text_field :photo, class: "form-control" %>
      </div>

    </div>

    <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
 <% end %>