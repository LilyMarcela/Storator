<%= form_for @item, url: store_items_path, :html => {:class => "form-horizontal center"} do 
    |f| %>
    <div class="form-group">
      <%= f.label :item_name, "Item name", class: "col-md-4 control label" %>
      <div class="col-md-4">
        <%= f.text_field :item_name, class: "form-control",
        placeholder: "Product name" %>
      </div>
      <div class="form-group">
        <%= f.label :item_price, "Price", class: "col-md-4 control-label" %>
      </div>
      <div class="col-4">
        <%= f.text_field :item_price, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description, "Describe your store", class: "col-md-4 control-label" %>
      </div>
      <div class="col-4">
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :photo, "Add your photo", class: "col-md-4 control-label" %>
      </div>
      <div class="col-4">
        <%= f.text_field :photo, class: "form-control" %>
      </div>

    </div>

    <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
 <% end %>